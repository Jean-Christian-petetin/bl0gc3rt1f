<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Un blog sur toute les nouveautés des series américaine." />
        <title>{% block title %}Serail-Seriz{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/main.css') }}" type="text/css" />
            <link rel="icon" type="image/x-icon" href="{{ asset('images/path4136.png') }}" />
        {% endblock %}
    </head>
    <body>
        <img class="banniere displayPc" alt="BanniereDuSite" src="{{ asset('images/banniere.png')}}">
        <nav>
            <ul>
                <li><a href="{{ path('inscriptionUser')}}">Sign in</a></li>
                <li><a href="{{ path('home')}}">News</a></li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('admin')}}">Admin</a></li>
                {%endif %}
                {% if is_granted('ROLE_USER') %}
                    <li><a href="{{ path('adminProfils')}}">Profils</a></li>
                {% endif %}
                
                {% if is_granted('ROLE_USER') and is_granted('ROLE_ADMIN')%}
                    <li><a class="active" href="{{ path('logOut')}}">logout</a></li>
                {% else %}
                <li><a href="{{ path('loGin') }}">login</a></li>
                    {#<form action="{{ path('loginCheck')}}" method="post">
                        <input type="text" id="email" name="_username" placeholder="Email" value=""/>
                        <input type="password" id="motdepasse" name="_password" placeholder="mot de passe" value=""/>
                        <input type="submit" value="Login"/>
                    </form>#}
                {% endif %}
            </ul>
        </nav>
                
        {% block body %}
        {% endblock %}
        
        {% block footer %}
            <footer>&copy; Copyright 2016 <a href="http://www.hmdev34.fr">Hicham</a> <a href="http://www.jeanchristianpetetin.fr">, Jc</a> <a href="http://www.elodiegil.fr">, Elodie.</a></footer>
        {% endblock %}
        
        {% block javascripts %}{% endblock %}
    </body>
</html>
