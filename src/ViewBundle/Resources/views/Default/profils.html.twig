        <div><img class="imgprofil" src="{{asset('images/')~user.avatar }}"></div>
        <div class="profils"><p>Nom : {{ user.nom }}</p>
        <p>Pr√©nom : {{ user.prenom }}</p>
        <p>Email : {{ user.email }}</p>
        
        </div>
    </div>
    <div class="modifprofil">
