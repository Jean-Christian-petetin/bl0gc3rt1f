{%extends "base.html.twig"%}

{% block title %}
    {{ parent() }}
    - Administration
    {% endblock %}
{% block body %}
<h1>ADMIN</h1>


{% for user in varUser %} {# On appelle cette boucle pour chaque instance #}
<div>
    <div>
        <img src="{{asset('images/')~user.avatar }}">
        <p>{{ user.nom }}</p>
        <p>{{ user.prenom }}</p>
        <p>{{ user.email }}</p>
        <p>{{ user.motdepasse }}</p>
    </div>
    <a href="{{ path('editProfils',{'id':user.id})}}">Modifier</a>
    <a href="{{ path('deleteProfils',{'id':user.id})}}">Supprimer</a>

</div>
        
{% endfor %}
{% endblock %}
